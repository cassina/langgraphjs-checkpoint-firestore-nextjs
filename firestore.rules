rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸš« Checkpoint collections (server-only)
    match /checkpoint_writes/{docId} {
      allow read, write: if false;
    }

    match /checkpoints/{docId} {
      allow read, write: if false;
    }

    // âœ… Users collection - self access only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // âœ… Conversations collection - self access only
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && (
          // For reads, fetch the doc and compare userId
          resource.data.userId == request.auth.uid ||
          // For writes (create/update), check what's being written
          request.resource.data.userId == request.auth.uid
        );
    }
  }
}
